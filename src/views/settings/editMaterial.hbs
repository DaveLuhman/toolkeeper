<div class="main-view">
  {{#if materials}}
    <form action="/settings/materials/edit" method="POST">
      <div class="mb-2 title-bar">
        <h3 class="title-text">Update Tool Construction Material</h3>
      </div>
      {{#each materials}}
        <div class="gap-2 columns-1 md:columns-2 form-control justify-items-center">
          <input id="edit-material_id" name="_id" value="{{id}}" type="hidden" />
          <div class="form-control">
            <label class="label"><span class="label-text">Name</span></label>
            <input id="edit-material_name" name="name" value="{{name}}" type="text" class="input input-bordered" />
          </div>
          <div class="form-control">
            <label class="label"><span class="label-text">Description</span></label>
            <input id="edit-material_name" name="description" value="{{description}}" type="text" class="input input-bordered" />
          </div>
        </div>
      {{/each}}
      <div class="modal-button-row">
        <label class="modal-button"><a href="/settings/materials">Cancel</a></label>
        <label class="modal-button"><button id="edit-material_name" type="submit">Submit</button></label>
      </div>
    </form>
  {{/if}}
</div>