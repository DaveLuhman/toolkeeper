<div class="flex flex-wrap">
  <div id="settings-nav">
    {{>_settings}}
  </div>
  <div id="serviceAssignmentTable">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Display Name</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        {{#if serviceAssignments}}
          {{#each serviceAssignments}}
            <tr>
              <td>{{name}}</td>
              <td><a href="/settings/serviceAssignments/edit/{{id}}"><i class="fa fa-pencil"></i></a></td>
              <td><a href="/settings/serviceAssignments/delete/{{id}}"><i class="fa fa-trash"></i></a></td>
            </tr>
          {{/each}}
        {{/if}}
      </tbody>
    </table>
    <div class="mx-5">
      <div class="inline-block px-4 py-1.5 text-sm font-medium no-underline rounded-lg btn btn-sm lg:-ml-2">
        <label for="newServiceAssignmentModal">New Service Assignment</label>
      </div>
    </div>
  </div>
</div>
{{!-- New SA Modal --}}
<input type="checkbox" id="newServiceAssignmentModal" class="modal-toggle" />
<div class="modal">
  <div class="modal-inner-md">
    <label for="newServiceAssignmentModal" class="modal-close-btn">âœ•</label>
    <form action="/settings/serviceAssignments/create" method="POST">
      <div class="grid items-center w-full grid-rows-2">
        <div class="title-bar">
          <h3 class="title-text">New Service Assignment</h3>
        </div>
        <div class="m-3">
          <input placeholder="Name" type="text" name="name" class="input input-bordered">
          <input placeholder="Description" type="text" name="description" class="input input-bordered">
          <input placeholder="Phone" type="text" name="phone" class="input input-bordered">
          <select name="type" class="select select-bordered">
            <option value="contractJob" {{isSelected type 'contractJob'}}>Contract Job</option>
            <option value="serviceJob" {{isSelected type 'serviceJob'}}>Service Job</option>
            <option value="vehicle" {{isSelected type 'vehicle'}}>Vehicle</option>
            <option value="employee" {{isSelected type 'employee'}}>Employee</option>
            <option value="stockroom" {{isSelected type 'stockroom'}}>Stockroom</option>
            <option value="importedUncategorized" {{isSelected type 'importedUncategorized'}}>Imported - Uncategorized
            </option>
            <option value="errorUncategorized" {{isSelected type 'errorUncategorized'}}>Error - Uncategorized</option>
          </select>
          <input placeholder="Misc Notes" type="textarea" name="notes" class="input input-bordered">
        </div>
        <div class="modal-button-row">
          <label class="btn btn-sm"> <button type="submit">Submit</button></label>
        </div>
      </div>
    </form>
  </div>
</div>