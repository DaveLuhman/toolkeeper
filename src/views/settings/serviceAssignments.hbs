<div class="flex flex-wrap">
  <div id="settings-nav">
    {{>_settings}}
  </div>
  <div id="serviceAssignmentTable">
    <div class="mx-5">
      <div class="inline-block px-4 py-1.5 text-sm font-medium no-underline rounded-lg btn btn-sm lg:-ml-2">
        <label for="newServiceAssignmentModal">New Service Assignment</label>
      </div>
    </div>
    <table class="table table-auto">
      <thead>
        <tr>
          <th>Display Name</th>
          <th class="hidden md:table-cell">Description</th>
          <th class="hidden lg:table-cell">Type</th>
          <th class="hidden lg:table-cell">Phone</th>
          <th class="hidden lg:table-cell">Notes</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        {{#if serviceAssignments}}
          {{#each serviceAssignments}}
            <tr>
              <td>{{name}}</td>
              <td class="hidden md:table-cell min-w-fit">{{description}}</td>
              <td class="hidden lg:table-cell">{{type}}</td>
              <td class="hidden lg:table-cell">{{phone}}</td>
              <td class="hidden lg:table-cell min-w-fit">{{notes}}</td>
              <td><a href="/settings/serviceAssignments/edit/{{id}}"><i class="fa fa-pencil"></i></a></td>
              <td><a href="/settings/serviceAssignments/delete/{{id}}"><i class="fa fa-trash"></i></a></td>
            </tr>
          {{/each}}
        {{/if}}
      </tbody>
    </table>

  </div>
</div>
<br>
{{> _pagination}}
{{!-- New SA Modal --}}
<input type="checkbox" id="newServiceAssignmentModal" class="modal-toggle" />
<div class="modal">
  <div class="modal-inner-md">
    <label for="newServiceAssignmentModal" class="modal-close-btn">âœ•</label>
    <form action="/settings/serviceAssignments/create" method="POST">
      <div class="grid items-center w-full grid-cols-2 grid-rows-3 gap-1">
        <div class="title-bar">
          <h3 class="title-text">New Service Assignment</h3>
        </div>

        <input placeholder="Name" type="text" name="name" class="input input-bordered">
        <input placeholder="Description" type="text" name="description" class="input input-bordered">
        <input placeholder="Phone" type="text" name="phone" class="input input-bordered">
        <select name="type" class="select select-bordered">
          <option value="Contract Job">Contract Job</option>
          <option value="Service Job">Service Job</option>
          <option value="Vehicle">Vehicle</option>
          <option value="Employee">Employee</option>
          <option value="Stockroom">Stockroom</option>
          <option value="Imported - Uncategorized">Imported - Uncategorized
          </option>
          <option value="Error - Uncategorized">Error - Uncategorized</option>
        </select>
        <input placeholder="Misc Notes" type="textarea" name="notes" class="col-span-2 input input-bordered">

        <div class="modal-button-row">
          <label class="btn btn-sm"> <button type="submit">Submit</button></label>
        </div>
      </div>
    </form>
  </div>
</div>