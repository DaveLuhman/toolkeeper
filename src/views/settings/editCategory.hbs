<div class="main-view">
  {{#if categories}}
    <form action="/settings/categories/edit" method="POST">
      <div class="mb-2 title-bar">
        <h3 class="title-text">Update Category</h3>
      </div>
      {{#each categories}}
        <div class="gap-2 columns-1 md:columns-2 form-control justify-items-center">
          <input name="_id" value="{{id}}" type="hidden" />
          <div>
            <label class="label"><span class="label-text">Name</span></label>
            <input name="name" value="{{name}}" type="text" class="input input-bordered" />
          </div>
          <div>
            <label class="label"><span class="label-text">Description</span></label>
            <input name="description" value="{{description}}" type="text" class="w-auto input input-bordered" />
          </div>
        </div>
      {{/each}}
      <div class="modal-button-row">
        <label class="modal-button"><a href="/settings/categories">Cancel</a></label>
        <label class="modal-button"><button type="submit">Submit</button></label>
      </div>
    </form>
  {{/if}}
</div>