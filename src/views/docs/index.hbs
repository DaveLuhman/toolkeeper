{{#if message}}
    <div id="message">
        <span title="message">
            <div class="font-extrabold text-red-700 alert alert-info">{{message}}</div>
        </span>
    </div>
{{/if}}
{{#if error}}
    <div id="error">
        <span title="error">
            <div class="font-extrabold text-red-700 alert alert-error">{{error}}</div>
        </span>
    </div>
{{/if}}
<div class="flex flex-row flex-nowrap gap-4 mt-5">
    {{> _docsToC}}

    <div class="flex-grow px-6 text-gradient-adaptive">
        <h1 class="text-4xl font-bold text-zinc-900 dark:text-zinc-100 mb-6">Welcome to the ToolKeeper docs</h1>
        <p class="text-base text-zinc-800 dark:text-zinc-300 mb-8">This is the documentation for the ToolKeeper application. Please use the navigation on the left to browse
            the documentation.</p>

        <h3 class="text-2xl font-semibold text-zinc-900 dark:text-zinc-100 mb-4">Quick Links</h3>
        <ul class="space-y-3">
            <li class="text-zinc-800 dark:text-zinc-300 hover:text-teal-600 dark:hover:text-teal-400 cursor-pointer transition-colors">
                <a href="/docs/faq">F.A.Q</a>
            </li>
            <li class="text-zinc-800 dark:text-zinc-300 hover:text-teal-600 dark:hover:text-teal-400 cursor-pointer transition-colors">
                <a href="/docs/getting-started">Getting Started</a>
            </li>
            <li class="text-zinc-800 dark:text-zinc-300 hover:text-teal-600 dark:hover:text-teal-400 cursor-pointer transition-colors">
                <a href="/docs/workflows">Core Workflows</a>
            </li>
            <li class="text-zinc-800 dark:text-zinc-300 hover:text-teal-600 dark:hover:text-teal-400 cursor-pointer transition-colors">
                <a href="/docs/roles">User Roles and Permissions</a>
            </li>
        </ul>
    </div>
</div>
