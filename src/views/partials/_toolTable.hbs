<div class="overflow-y-scroll max-h-[75vh]  z-0 relative">
<table class="table table-xs mt-2 max-h-min table-pin-rows table-pin-cols">
  <thead>
    <tr>
      <td>
        <div id="printButton" class="md:mr-3 md:items-start">
          <label onclick="openInNewTab()"><i
              class="fa-solid fa-print"
            ></i></label>
        </div></td>
      <th>Serial number</th>
      <th class="hidden md:table-cell">Tool ID</th>
      <th>Barcode #</th>
      <th class="hidden lg:table-cell">Description</th>
      <th class="hidden md:table-cell">Status</th>
      <th class="hidden md:table-cell">Service Assignment</th>
      <th class="hidden md:table-cell">Category</th>
      <th>Edit</th>
    </tr>
  </thead>
  {{#if tools}}
    <tbody>
      {{#each tools}}
          <tr>
            <td></td>
            <td id="serialNumber">{{serialNumber}}</td>
            <td class="hidden md:table-cell" id="toolID">{{toolID}}</td>
            <td id="barcode">{{barcode}}</td>
            <td
              class="hidden lg:table-cell"
              id="description"
            >{{description}}</td>
            <td class="hidden md:table-cell" id="status">{{status}}</td>
            <td
              class="hidden md:table-cell"
              id="serviceAssignment"
            >{{serviceAssignment.name}}
              -
              {{serviceAssignment.description}}</td>
            <td class="hidden md:table-cell" id="category">{{category.name}}
            </td>
            <td><label class="rounded-badge btn-xs"><a href="/tool/{{id}}"><i
                    class="fa fa-pencil"
                  ></i></a></label>
            </td>
          </tr>
      {{/each}}
    </tbody>
  {{/if}}
</table>
