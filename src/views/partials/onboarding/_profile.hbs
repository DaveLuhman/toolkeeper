{{#eq onboarding.progress.profileSetup false}}
<div class="fixed inset-0 bg-black bg-opacity-70 z-50 flex items-center justify-center">
	<div class="bg-white rounded-lg p-8 max-w-lg w-11/12 shadow-xl">
		<h3 class="text-2xl font-bold text-gray-800 mb-4">Edit Your Profile üìù</h3>
		<p class="text-gray-600 mb-6">Here are the fields you can edit:</p>

		<div class="mb-4">
			<h4 class="font-semibold">First Name</h4>
			<p class="text-gray-500">Your first name as it will appear in your profile.</p>
		</div>

		<div class="mb-4">
			<h4 class="font-semibold">Last Name</h4>
			<p class="text-gray-500">Your last name as it will appear in your profile.</p>
		</div>

		<div class="mb-4">
			<h4 class="font-semibold">Email</h4>
			<p class="text-gray-500">Your email address used for notifications and account recovery.</p>
		</div>

		<div class="mb-4">
			<h4 class="font-semibold">Role</h4>
			<p class="text-gray-500">Your role in the system (User, Manager, Admin). This may affect your permissions.</p>
		</div>

		<div class="mb-4">
			<h4 class="font-semibold">Visual Theme</h4>
			<p class="text-gray-500">Choose a visual theme for your profile interface.</p>
		</div>

		<div class="flex items-center justify-center gap-4">
			<button onclick="closeProfileEditOverlay()" class="px-6 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600 transition-colors">Close</button>
		</div>
	</div>
</div>
{{/eq}}