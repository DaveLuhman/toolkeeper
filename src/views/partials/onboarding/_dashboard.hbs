{{#if onboarding}}
<div class="fixed inset-0 bg-black bg-opacity-70 z-50 flex items-center justify-center">
	<div class="bg-white rounded-lg p-8 max-w-lg w-11/12 shadow-xl">
		{{#eq onboarding.nextStep 'profileSetup'}}
		<div class="text-center">
			<h3 class="text-2xl font-bold text-gray-800 mb-4">Welcome to ToolKeeper! 👋</h3>
			<p class="text-gray-600 mb-6">Let's start by setting up your profile.</p>
			<div class="flex items-center justify-center gap-4">
				<a href="/user/profile" class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">Setup Profile</a>
				<button onclick="skipStep('profileSetup')" class="px-6 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600 transition-colors skip-step" data-step="profileSetup">Skip for now</button>
			</div>
		</div>
		{{/eq}}

		{{#eq onboarding.nextStep 'categoryCreated'}}
		<div class="text-center">
			<h3 class="text-2xl font-bold text-gray-800 mb-4">Create Categories 📁</h3>
			<p class="text-gray-600 mb-6">Organize your tools by creating categories.</p>
			<div class="flex items-center justify-center gap-4">
				<a href="/settings/categories" class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">Create Categories</a>
				<button onclick="skipStep('categoryCreated')" class="px-6 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600 transition-colors skip-step" data-step="categoryCreated">Skip for now</button>
			</div>
		</div>
		{{/eq}}

		{{#eq onboarding.nextStep 'serviceAssignmentCreated'}}
		<div class="text-center">
			<h3 class="text-2xl font-bold text-gray-800 mb-4">Set Up Service Assignments 🔧</h3>
			<p class="text-gray-600 mb-6">Define service assignments for your tools.</p>
			<div class="flex items-center justify-center gap-4">
				<a href="/settings/serviceAssignments" class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">Create Services</a>
				<button onclick="skipStep('serviceAssignmentCreated')" class="px-6 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600 transition-colors skip-step" data-step="serviceAssignmentCreated">Skip for now</button>
			</div>
		</div>
		{{/eq}}

		{{#eq onboarding.nextStep 'firstToolAdded'}}
		<div class="text-center">
			<h3 class="text-2xl font-bold text-gray-800 mb-4">Add Your First Tool 🛠️</h3>
			<p class="text-gray-600 mb-6">Start building your inventory by adding tools.</p>
			<div class="flex items-center justify-center gap-4">
				<a href="/dashboard" class="px-6 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">Add Tool</a>
				<button onclick="skipStep('firstToolAdded')" class="px-6 py-2 bg-gray-500 text-white rounded-md hover:bg-gray-600 transition-colors skip-step" data-step="firstToolAdded">Skip for now</button>
			</div>
		</div>
		{{/eq}}
	</div>
</div>
{{/if}}
