<input type="checkbox" id="newServiceAssignmentModal" class="modal-toggle" />
<div class="modal" role="dialog">
    <div class="modal-inner-md">
        <label for="newServiceAssignmentModal" class="modal-close-btn">âœ•</label>
        <form action="/settings/serviceAssignments/create" method="POST">
            <input name="tenant" type="hidden" value="{{user.tenant}}" />
            <div class="grid items-center w-full grid-cols-2 grid-rows-3 gap-1">
                <div class="title-bar">
                    <h3 class="title-text">New Service Assignment</h3>
                </div>
                <div class="tooltip tooltip-primary tooltip-top" data-tip="Job Number is a short name.">
                    <input placeholder="Job Number" type="text" name="jobNumber" id="new-service-assignment_jobNumber"
                        class="input input-bordered">
                </div>
                <div class="tooltip tooltip-primary md:tooltip-top" data-tip="Job Name is a friendly, human readable name.">
                    <input placeholder="Job Name" type="text" name="jobName" id="new-service-assignment_jobName"
                        class="input input-bordered">
                </div>
                <div class="tooltip tooltip-primary tooltip-top" data-tip="Phone is usually for a person, not a job.">
                    <input placeholder="Phone" type="text" name="phone" id="new-service-assignment_phone"
                        class="input input-bordered">
                </div>
                <div class="tooltip tooltip-primary tooltip-bottom"
                    data-tip="Type is how status is determined. Anything in a stockroom is checked in.">
                    <select name="type" id="new-service-assignment_type" class="select select-bordered w-full">
                        <option value="Contract Jobsite">Contract Jobsite</option>
                        <option value="Service Jobsite">Service Jobsite</option>
                        <option value="Vehicle">Vehicle</option>
                        <option value="Employee">Employee</option>
                        <option value="Stockroom">Stockroom</option>
                    </select>
                </div>
                <div class="tooltip tooltip-primary tooltip-bottom col-span-2"
                    data-tip="Misc Notes are freeform text that can be used for anything.">
                    <input placeholder="Misc Notes" type="textarea" name="notes" id="new-service-assignment_notes"
                        class="w-full input input-bordered">
                </div>
                <div class="modal-button-row">
                    <label class="modal-button"><button id="new-service-assignment_submit"
                            type="submit">Submit</button></label>
                    <label class="modal-button" for="newServiceAssignmentModal">Cancel</label>
                </div>
            </div>
        </form>
    </div>
    <label class="modal-backdrop" for="newServiceAssignmentModal">Close</label>
</div>