<input type="checkbox" id="newToolModal" class="modal-toggle" />
<div class="modal">
    <div class="modal-inner-lg">
        <label for="newToolModal" class="modal-close-btn">âœ•</label>
        <form action="/tool/submit" method="POST">
            <div class="modal-table">
                <div class="title-bar">
                    <h3 class="title-text">Create A New Tool Entry</h3>
                </div>
                <input name="serialNumber" type="text" placeholder="Serial Number" class="input input-bordered" />
                <input name="modelNumber" type="text" placeholder="Model Number" class="input input-bordered" />
                <input name="toolID" type="text" placeholder="Tool ID" class="input input-bordered" />
                <input name="barcode" type="text" placeholder="Barcode" class="input input-bordered" />
                <input name="description" type="text" placeholder="Description" class="input input-bordered" />
                <input name="manufacturer" type="text" placeholder="Manufacturer" class="input input-bordered" />
                <select name="serviceAssignment" class="select select-bordered">
                    {{#each serviceAssignments}}
                        <option name='{{ this.name }}' value='{{ this.id }}'>{{ this.name }} - {{ this.description}}
                        </option>
                    {{/each}}
                </select>
                <select name="category" class="select select-bordered">
                    {{#each categories}}
                        <option name='{{ this.name }}' value='{{ this.id }}'>{{ this.name }}
                        </option>
                    {{/each}}
                </select>
                <div class="grid grid-flow-row-dense grid-cols-4 gap-2">
                    <div class="form-control">
                        <input name="width" placeholder="W" value="{{size.width}}" type="text"
                            class="input input-bordered" />
                    </div>
                    <div class="form-control">
                        <input name="length" placeholder="L" value="{{size.length}}" type="text"
                            class="input input-bordered" />
                    </div>
                    <div class="form-control">
                        <input name="height" placeholder="H" value="{{size.height}}" type="text"
                            class="input input-bordered" />
                    </div>
                    <div class="form-control">
                        <input name="weight" placeholder="Lbs" value="{{size.weight}}" type="number"
                            class="input input-bordered" />
                    </div>
                </div>
                <div class="modal-button-row">
                    <label class="modal-button" for="newToolModal">Cancel</label>
                    <label class="modal-button"><button type="submit">Submit</button></label>
                </div>
            </div>
        </form>
    </div>
</div>