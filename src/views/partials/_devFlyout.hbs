{{#if user.preferences.developer}}
<div class="ml-10 pl-18 dropdown dropdown-right">
  <label tabindex="0" class="btn btn-circle btn-ghost btn-xs text-info">
    <h1>Test Section</h1>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 36 36" class="w-4 h-4 stroke-current">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
        d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
  </label>
  <div class="p-5 bg-white shadow w-100 card dropdown-content">
    <h2>Categories:</h2>
    <div class="bg-fuchsia-500">
      <ul class="text-white list-disc">
        {{#each categories}}
          <li>{{this.name}} -- {{this.id}}</li>
        {{/each}}
      </ul>
    </div>
    <hr />
    <h2>Tools:</h2>
    <ul class="list-decimal">
      {{#first tools 10}}
        <li>
          <div class="bg-slate-900 ">{{this.id}}: </div>
          <ul class="pl-10 list-disc">
            <li class="text-black">SN: {{this.serialNumber}}</li>
            <li class="text-black">PN: {{this.modelNumber}}</li>
            <li class="text-black">Barcode: {{this.barcode}}</li>
            <li class="text-black">Status: {{this.status}}</li>
            <li class="text-black">SA: {{this.serviceAssignment.name}}</li>
            <li class="text-black">Desc: {{this.description}}</li>
            <li class="text-black">Raw: {{this}}</li>
          </ul>
        </li>
      {{/first}}
    </ul>
    <hr />
    <h2>Service Assignments</h2>
    {{#each activeServiceAssignments}}
      <li class="text-black">{{this.name}} -- {{this.id}}</li>
    {{/each}}
    <hr />
    <h2>Current User</h2>
    <ul>
      <li>{{user.displayName}} -- {{user.id}} -- {{JSONstringify user.preferences}}</li>
    </ul>
    <hr />
  </div>
</div>
<br />
{{/if}}
