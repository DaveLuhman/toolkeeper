{{#if user}}
<nav id="header">
  <div class="tk-navbar">
    <img class="" src="/img/toolKeeperLogo-dark-small.png" width="150px" height="auto">
    <label for="menu-toggle" class="cursor-pointer md:hidden block">
      <svg class="inline fill-current" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20">
        <title>menu</title>
        <path d="M0 3h20v2H0V3zm0 6h20v2H0V9zm0 6h20v2H0v-2z"></path>
      </svg>
    </label>
    <input class="hidden" type="checkbox" id="menu-toggle">

    <div class="tk-navbar-menu" id="menu">
      <nav>
        <ul class="tk-navbar-links-wrapper">
          <li><a class="tk-navbar-link" href="/dashboard">Dashboard</a></li>
          <li><a class="tk-navbar-link"><label for="newToolModal">Create&nbsp;A New Tool</label></a></li>
          <li><a class="tk-navbar-link"><label for="checkInOutModal">Check-In/Out</label></a></li>
          <li><a class="tk-navbar-link"><label for="searchToolModal">Search Tools</label></a></li>
        </ul>
      </nav>
    </div>

    <div id="nav-content">
      <div class="nav-user-menu-wrapper">
        <div class="dropdown dropdown-end">
          <label tabindex="0" class="nav-username-btn"><i
              class="fa fa-chevron-down">&nbsp;</i>{{user.firstName}}&nbsp;{{user.lastName}}</label>
          <ul tabindex="0" class="nav-user-dropdown">
            <li><a class="tk-navbar-link" href="/user/profile">Profile</a></li>
            {{#eq user.role "Manager"}}<li><a class="tk-navbar-link" href="/manager">User Management</a></li>{{/eq}}
            {{#eq user.role "Admin"}}<li><a class="tk-navbar-link" href="/manager">User Management</a></li>{{/eq}}
            <li><a class="tk-navbar-link" href="/logout">Logout</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</nav>
