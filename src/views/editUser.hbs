<div class="main-view">

    <div class="text-white card-header" style="background-color: #494949;">
        {{#if message}}
        <h3>{{message}}</h3>
        {{else}}
        <h5>Edit User</h5>
        {{/if}}
    </div>
    {{#if targetUser}}
    <form action="/user/{{user._id}}" method="POST">
        <div class="form-control justify-items-center">
            <div class="flex flex-wrap -mx-3">
                <div class="w-full px-3 sm:w-1/2">
                    <div class="mb-5">
                        <label for="firstName" class="mb-3 ">
                            First Name
                        </label>
                        <input type="text" name="firstName" id="firstName" value="{{targetUser.firstName}}"
                            class="w-full rounded-md border  py-3 px-6 text-base font-medium  outline-none focus:border-[#6A64F1] focus:shadow-md" />
                    </div>
                </div>
                <div class="w-full px-3 sm:w-1/2">
                    <div class="mb-5">
                        <label for="lastName" class="mb-3 ">
                            Last Name
                        </label>
                        <input type="text" name="lastName" id="lastName" value="{{targetUser.lastName}}"
                            class="w-full rounded-md border py-3 px-6 text-base font-medium  outline-none focus:border-[#6A64F1] focus:shadow-md" />
                    </div>
                </div>
            </div>
            <div class="flex flex-wrap -mx-3">
                <div class="w-full px-3 sm:w-1/2">
                    <div class="mb-5">
                        <label class="label">
                            <span class="label-text">Email</span></label>
                        <input name="email" type="text" value="{{targetUser.email}}"
                            class="w-full rounded-md border  py-3 px-6 text-base font-medium  outline-none focus:border-[#6A64F1] focus:shadow-md" />

                    </div>
                </div>
                <div class="w-full px-3 sm:w-1/2">
                    <div class="mb-5">
                        <label class="label">
                            <span class="label-text">Role</span></label>
                        <select
                            class="w-full rounded-md border  py-3 px-6 text-base font-medium  outline-none focus:border-[#6A64F1] focus:shadow-md"
                            name="role" id="role" aria-label="role">
                            <option value="User" {{#eq targetUser.role "User" }}selected{{/eq}}>User</option>
                            <option value="Manager" {{#eq targetUser.role "Manager" }}selected{{/eq}}>Manager</option>
                            <option value="Admin" {{#eq targetUser.role "Admin" }}selected{{/eq}}>Admin</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="flex flex-wrap -mx-3">
                <div class="w-full px-3 sm:w-1/2">
                    <div class="mb-5">
                        <label for="resetPasswordModal" class="label">
                            <button class="label-text">Reset Password</button>
                            </label>
                        <div class="w-full px-3 sm:w-1/2">
                            <div class="mb-5">
                                <button type="submit" class="btn btn-primary submit">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

{{else}}
<h3 class="alert-danger">Somehow you got to the <i>user tool</i> page without the tool's data</h3>
{{/if}}