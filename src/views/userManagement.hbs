<div class="main-view">
    {{#if message}}
        <span title="message">
            <div class="alert">{{message}}</div>
        </span>
    {{/if}}
    {{#if searchTerms}}
        <h4>You searched for: {{searchTerms}}</h4>
    {{/if}}
    <table class="table">
        <thead>
            <tr>
                <th>Display Name</th>
                <th>Email</th>
                <th>Last Login</th>
                <th>Role</th>
                <th>Disabled?</th>
                <th>Edit</th>
            </tr>
        </thead>

        <tbody>
            {{#if users}}
                {{#each users}}

                    <tr class="text-center">
                        <td>
                            {{displayName}}
                        </td>
                        <td>{{email}}

                        </td>
                        <td>
                            {{lastLogin}}
                        </td>
                        <td>{{role}}

                        </td>
                        <td>
                            {{isDisabled}}
                        </td>
                        <td>
                            <label class="rounded-badge btn-xs">
                                <a href="/manager/{{id}}">
                                    <i class="fa fa-pencil"></i>
                                </a>
                            </label>
                        </td>
                    </tr>

                {{/each}}
            {{/if}}
        </tbody>
    </table>
</div>
<div class="float-right mx-6">
    <div class="inline-block px-4 py-2 text-lg font-medium no-underline rounded-lg btn hover:text-black lg:-ml-2">
        <label for="newUserModal">New User</label>
    </div>
</div>