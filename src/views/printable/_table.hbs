<style>
  td .barcode { font-family: 'Libre Barcode 39';font-size: 12pt; }
</style>
<section>
  <table class="table table-zebra grid grid-cols-5">
    <thead>
      <th>Serial Number</th>
      <th>Model Number</th>
      <th>Tool ID</th>
      <th class="col-span-2">Description</th>
      <th>Barcode</th>
    </thead>
    <tbody>
      <tr>
        <td class="col-span-6">
          {{#eq "serviceAssignment" searchBy}}
            <h1 class="text-2xl" id="search-terms">Searched For:
              {{getServiceAssignmentName allServiceAssignments searchTerm}}.
              Total Results:
              {{totalFound}}</h1>
          {{/eq}}
          {{#eq "category" searchBy}}
            <h1 class="text-2xl" id="search-terms">Searched For:
              {{getCategoryName categories searchTerm}}. Total Results:
              {{totalFound}}</h1>
          {{/eq}}
          {{#if (searchingForOneTool searchBy)}}
            <h1 class="text-2xl" id="search-terms">Searched For:
              {{searchTerm}}. Total Results:
              {{totalFound}}</h1>
          {{/if}}</td>
      </tr>
      {{#each tools}}
        <tr>
          <td>{{serialNumber}}</td>
          <td>{{modelNumber}}</td>
          <td>{{toolID}}</td>
          <td class="col-span-2">{{description}}</td>
          <td class="barcode">{{barcode}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</section>