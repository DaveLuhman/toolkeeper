<section title="modals">
    <!-- Create New Tool Modal -->
    <section title="newToolModal">
        <div class="modal fade" id="newToolModal" tabindex="-1" aria-labelledby="newToolModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="newToolModalHeader">Create A New Tool Entry</h5>
                        <a type='button' data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </a>
                    </div>
                    <div class="modal-body">
                        <form action="/tool/submit" method="POST">
                            <div class="row ">
                                <div class="col">
                                    <input type="text" class="form-control" name="serialNumber"
                                        placeholder="Serial Number" aria-label="Serial Number">
                                </div>
                                <div class="col">
                                    <input type="text" class="form-control " name="partNumber" placeholder="Part Number"
                                        aria-label="Part Number">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <input type="text" class="form-control" name="barcode" placeholder="Barcode"
                                        aria-label="Barcode">
                                </div>
                                <div class="col">
                                    <input type="text" class="form-control" name="description" placeholder="Description"
                                        aria-label="Description">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <input type="text" name="serviceAssignment" id="serviceAssignment"
                                        class="form-control" placeholder="Service Assignment"
                                        aria-label="service assignment">
                                </div>
                                <div class="col">
                                    <select name="status" id="status" class="form-select">
                                        <option value="Checked In">Checked In</option>
                                        <option value="Checked Out">Checked Out</option>
                                    </select>
                                </div>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <button name="NewToolModalSubmitBtn" type="submit"
                                    class="btn btn-primary submit">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{!-- END OF NEW TOOL MODAL --}}
    </section>
