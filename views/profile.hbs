<br>
<br>
{{#if error}}
<div class="alert alert-danger" role="alert">
    <p>{{error}}</p>
</div>
{{/if}}
<div class="container bg-body-secondary rounded p-3">
    <div class="container-fluid">
        <form action="/user/:id" method="POST"></form>
        <div class="row input-group">
            <div class="col">
                <label for="email">Email:</label>
                <input type="text" class="form-control" name="email" aria-label="Serial Number" value="{{user.email}}"
                    disabled>
            </div>
            <div class="col">
                <label for="role">Role:</label>
                <select class="form-select" id="userRoleSelect" {{#eq user.role "User" }}disabled{{/eq}}>
                    <option value="User" {{#eq user.role "User" }}selected{{/eq}}>User</option>
                    <option value="Manager" {{#eq user.role "Manager" }}selected{{/eq}}>Manager</option>
                    <option value="Admin" {{#eq user.role "Admin" }}selected{{/eq}}>Admin</option>
                </select>
            </div>
        </div>
        <div class="row input-group">
            <div class="col">
                <label for="firstName">First Name:</label>
                <input type="text" class="form-control" name="firstName" placeholder="firstName" aria-label="firstName"
                    value="{{user.firstName}}">
            </div>
            <div class="col">
                <label for="lastName">Last Name:</label>
                <input type="text" class="form-control" name="lastName" placeholder="lastName" aria-label="lastName"
                    value="{{user.lastName}}">
            </div>
        </div>
        <div class="row input-group p-2">
            <div class="col">
                <button type="button" class="btn right-align btn-primary" data-bs-toggle="modal"
                    data-bs-target="#resetPwModal">Reset Password?</button>
            </div>
            <div class="col">
                <button type="submit" class="d-flex btn btn-primary">Update User Details?</button>
            </div>
        </div>
        </form>
    </div>
</div>
<br>
{{!-- Admin Section --}}
{{#eq user.role "Admin"}}
<div class="container bg-body-secondary rounded p-3">
    <div class="container-fluid">
        <h4>Secret Admin Area</h4>
        <form action="/tool/submitFile" method="POST">
            <div class="input-group">
                <input type="file" name="csvFile" id="csvFile" class="form-control">
                <button type="submit" class="btn-danger form-control"></button>
            </div>
        </form>

    </div>
</div>
{{/eq}}